#include<stdio.h> 
2 float findsum(float a,float b,float c); 
3 int main(){ 
4 	float a,b,c,d; 
5 	printf("enter three numbers to be added:"); 
6 	scanf("%f%f%f",&a,&b,&c); 
7 	d=findsum(a,b,c); 
8 	printf("the sum of the three numbers is:%f",d); 
9 	return 0; 
10 } 
11 float findsum(float a,float b,float c){ 
12 	float sum; 
13 	sum=a+b+c; 
14 	return sum; 
15 } 
